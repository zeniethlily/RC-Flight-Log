<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=>, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>RC Flight Log</title>
    <style>
      .stayEnd {
        display: flex;
        /* justify-content: center; */
        align-items: flex-end;
      }
      .alert {
        margin-bottom: 0 !important;
      }
    </style>
</head>
<body>
    <% if(alerts.success){ %> <% alerts.success.forEach(function(msg){ %>
    <div class="alert alert-success">
      <%= msg %>
    </div>
    <% }); %> <% } %> <% if(alerts.error){ %> <%
    alerts.error.forEach(function(msg){ %>
    <div class="alert alert-danger">
      <%= msg %>
    </div>
    <% }); %> <% } %> <% if(alerts.autherror){ %> <%
    alerts.autherror.forEach(function(msg){ %>
    <div class="alert alert-danger">
      Your <%= msg.param %> has <%= msg.msg %>
    </div>
    <% }); %> <% } %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
        <a class="navbar-brand" href="/">RC Flight Log</a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/"
                >Home <span class="sr-only">(current)</span></a
              >
            </li>
            <% if(currentUser) {%> <% if(currentUser.isSenior) {%>
            <li class="nav-item">
              <a class="nav-link" href="/s/create">Create List</a>
            </li>
            <%} %> <% if(currentUser.isHelper) {%>
            <li class="nav-item">
              <a class="nav-link" href="/h/profile">Profile</a>
            </li>
  
            <%} %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/logout">Logout</a>
            </li>
            <%} %> <% if(!currentUser) {%>
            <li class="nav-item">
              <a class="nav-link" href="/auth/signin">Signin</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/signup">Signup</a>
            </li>
            <%} %>
          </ul>
        </div>
      </nav>
    <%- body %> 

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>